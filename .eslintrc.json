{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "jest": true
  },
  "plugins": ["react", "prettier"],
  "extends": ["plugin:prettier/recommended"],
  "rules": {
    "linebreak-style": ["error", "unix"]
  }
}
